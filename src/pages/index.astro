---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="container" id="container">
    <!-- Gradient glow around viewport edges -->
    <div class="gradient-glow" id="gradientGlow"></div>

    <!-- Hidden SVG for mask definition -->
    <svg width="0" height="0" style="position: absolute;">
      <defs>
        <mask id="logoMask">
          <path
            d="M292.2,387.2h-53.9l-2.9-6.9c-20.4-48-54-128.4-76.5-182.2-15.5,37-42.8,102.4-47.8,114.1l-31.6,74.9H25.5l109.2-257.3h48.3l109.2,257.3Z"
            fill="white"></path>
          <path
            d="M383.2,382.6h-45.7L233.3,125.2h53.5l73.5,185.3,73.5-185.3h53.5l-104.2,257.3Z"
            fill="white"></path>
        </mask>
      </defs>
    </svg>

    <!-- Gradient layer with logo mask applied -->
    <div class="logo-wrapper">
      <div class="background-layer" id="bgLayer"></div>
    </div>

    <!-- Tap instruction for mobile (hidden after first tap) -->
    <div class="tap-instruction" id="tapInstruction">
      <p>Tap to enable tilt</p>
    </div>
  </div>
</Layout>

<style>
  .container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #000000;
    overflow: hidden;
    margin: 0;
    padding: 0;
  }

  .gradient-glow {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    background: radial-gradient(circle at 25% 30%, #ff006e 0%, transparent 40%),
      radial-gradient(circle at 75% 30%, #8338ec 0%, transparent 40%),
      radial-gradient(circle at 50% 70%, #3a86ff 0%, transparent 40%),
      radial-gradient(circle at 50% 50%, #ffd60a 0%, transparent 35%),
      radial-gradient(
        ellipse at center,
        #ff006e 0%,
        #8338ec 25%,
        #3a86ff 50%,
        #ffd60a 75%,
        #ff006e 100%
      );
    background-size: 120% 120%;
    background-position: center;
    mask: radial-gradient(circle at center, transparent 45%, black 97%);
    -webkit-mask: radial-gradient(circle at center, transparent 45%, black 97%);
    transition: transform 0.1s ease-out;
    will-change: transform;
    z-index: 1;
  }

  .logo-wrapper {
    width: 70vw;
    height: 70vw;
    max-width: 70vh;
    max-height: 70vh;
    position: relative;
    overflow: visible;
    mask: url(#logoMask);
    -webkit-mask: url(#logoMask);
    mask-size: 100% 100%;
    -webkit-mask-size: 100% 100%;
    mask-position: center;
    -webkit-mask-position: center;
    mask-repeat: no-repeat;
    -webkit-mask-repeat: no-repeat;
    z-index: 2;
  }

  .background-layer {
    position: absolute;
    top: -30%;
    left: -30%;
    width: 160%;
    height: 160%;
    background: radial-gradient(circle at 25% 30%, #ff006e 0%, transparent 40%),
      radial-gradient(circle at 75% 30%, #8338ec 0%, transparent 40%),
      radial-gradient(circle at 50% 70%, #3a86ff 0%, transparent 40%),
      radial-gradient(circle at 50% 50%, #ffd60a 0%, transparent 35%),
      radial-gradient(
        ellipse at center,
        #ff006e 0%,
        #8338ec 25%,
        #3a86ff 50%,
        #ffd60a 75%,
        #ff006e 100%
      );
    background-size: 150% 150%;
    background-position: center;
    transition: transform 0.1s ease-out;
    will-change: transform;
  }

  .tap-instruction {
    position: fixed;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    color: rgba(255, 255, 255, 0.5);
    font-size: 14px;
    font-weight: 400;
    text-align: center;
    pointer-events: none;
    transition: opacity 0.5s ease;
    z-index: 100;
  }

  .tap-instruction p {
    margin: 0;
    padding: 12px 24px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    backdrop-filter: blur(10px);
  }

  .tap-instruction.hidden {
    opacity: 0;
    pointer-events: none;
  }
</style>

<script>
  // Gyroscope and mouse parallax effect
  const bgLayer = document.getElementById("bgLayer");
  const gradientGlow = document.getElementById("gradientGlow");
  let isGyroAvailable = false;
  let mouseX = 0;
  let mouseY = 0;

  // Smooth animation values
  let currentX = 0;
  let currentY = 0;
  let targetX = 0;
  let targetY = 0;

  // Request permission for iOS 13+ devices
  async function requestGyroPermission() {
    const tapInstruction = document.getElementById("tapInstruction");

    if (
      typeof DeviceOrientationEvent !== "undefined" &&
      typeof (DeviceOrientationEvent as any).requestPermission === "function"
    ) {
      try {
        console.log("Requesting gyroscope permission...");
        const permission = await (
          DeviceOrientationEvent as any
        ).requestPermission();
        console.log("Permission result:", permission);
        if (permission === "granted") {
          isGyroAvailable = true;
          window.addEventListener("deviceorientation", handleOrientation);
          console.log("Gyroscope enabled!");
          if (tapInstruction) {
            tapInstruction.classList.add("hidden");
          }
        }
      } catch (error) {
        console.log("Gyroscope permission denied:", error);
      }
    } else if ("DeviceOrientationEvent" in window) {
      // Android and older iOS devices
      console.log("Gyroscope available without permission");
      isGyroAvailable = true;
      window.addEventListener("deviceorientation", handleOrientation);
      if (tapInstruction) {
        tapInstruction.classList.add("hidden");
      }
    }
  }

  // Handle device orientation (gyroscope)
  function handleOrientation(event: DeviceOrientationEvent) {
    if (!event.beta || !event.gamma) return;

    // Beta: front-to-back tilt (-180 to 180)
    // Gamma: left-to-right tilt (-90 to 90)
    const beta = event.beta || 0;
    const gamma = event.gamma || 0;

    // Normalize and limit movement
    targetX = Math.max(-30, Math.min(30, gamma * 0.8));
    targetY = Math.max(-30, Math.min(30, (beta - 45) * 0.5)); // Offset by 45 for natural holding position
  }

  // Handle mouse movement (desktop fallback)
  function handleMouseMove(event: MouseEvent) {
    if (isGyroAvailable) return; // Don't use mouse if gyro is active

    const centerX = window.innerWidth / 2;
    const centerY = window.innerHeight / 2;

    mouseX = ((event.clientX - centerX) / centerX) * 30;
    mouseY = ((event.clientY - centerY) / centerY) * 30;

    targetX = mouseX;
    targetY = mouseY;
  }

  // Smooth animation loop
  function animate() {
    // Lerp (linear interpolation) for smooth movement
    currentX += (targetX - currentX) * 0.1;
    currentY += (targetY - currentY) * 0.1;

    if (bgLayer) {
      bgLayer.style.transform = `translate(${currentX}px, ${currentY}px) scale(1.2)`;
    }

    if (gradientGlow) {
      // Glow moves slightly less for depth effect
      gradientGlow.style.transform = `translate(${currentX * 0.5}px, ${currentY * 0.5}px)`;
    }

    requestAnimationFrame(animate);
  }

  // Initialize
  window.addEventListener("mousemove", handleMouseMove);

  // Try to enable gyroscope on user interaction (required for iOS)
  const container = document.getElementById("container");
  let permissionRequested = false;

  async function handleUserInteraction() {
    if (!permissionRequested) {
      permissionRequested = true;
      console.log("User interaction detected!");
      await requestGyroPermission();
    }
  }

  // Multiple event listeners to catch any user interaction
  container?.addEventListener("click", handleUserInteraction);
  container?.addEventListener("touchstart", handleUserInteraction);
  document.addEventListener("click", handleUserInteraction);
  document.addEventListener("touchstart", handleUserInteraction);

  // Start animation loop
  animate();

  // Hide tap instruction after 5 seconds if no interaction
  setTimeout(() => {
    const tapInstruction = document.getElementById("tapInstruction");
    if (tapInstruction && !permissionRequested) {
      tapInstruction.style.opacity = "0.3";
    }
  }, 5000);
</script>
