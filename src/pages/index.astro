---
import Layout from "../layouts/Layout.astro";
import VoiceChatButton from "../components/VoiceChatButton.astro";
---

<Layout>
  <VoiceChatButton position="center-bottom" />
  <div class="container">
    <!-- Fixed logo mask with moving gradient inside -->
    <div class="logo-mask">
      <div class="gradient-layer" id="gradientLayer"></div>
    </div>

    <!-- Small watermark logo in bottom left -->
    <div class="watermark">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
        <line
          x1="241.9"
          y1="170.2"
          x2="241.9"
          y2="318.2"
          fill="#fff"
          stroke="#fff"
          stroke-miterlimit="10"
          stroke-width="30"></line>
        <line
          x1="165.6"
          y1="248.2"
          x2="314.6"
          y2="248.2"
          fill="#fff"
          stroke="#fff"
          stroke-miterlimit="10"
          stroke-width="30"></line>
        <path
          d="M242.1,332.5v14.8c0,54.4,44.1,98.6,98.6,98.6s98.6-44.1,98.6-98.6-44.1-98.6-98.6-98.6h-12.8"
          fill="none"
          stroke="#fff"
          stroke-miterlimit="10"
          stroke-width="30"></path>
        <path
          d="M241.4,152.4v-45.9c0-27.7-22.4-50.1-50.1-50.1s-60.1,22.4-60.1,50.1l-1,11.4,2,19.4-12.3-2-16.4,1c-27.7,0-50.1,34.4-50.1,62.1s22.4,50.1,50.1,50.1h48.4"
          fill="none"
          stroke="#fff"
          stroke-miterlimit="10"
          stroke-width="30"></path>
      </svg>
    </div>
  </div>
</Layout>

<style>
  .container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #000000;
    overflow: hidden;
    margin: 0;
    padding: 0;
  }

  .logo-mask {
    position: fixed;
    inset: 0;
    overflow: hidden;
    mask-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 512 512' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M84.7,313.4h-.5v-99.3h47.6c10.1,0,18.3,2.7,24.3,8.2,6,5.5,9.2,13.3,9.2,22.9s-1.4,11.4-3.7,15.1-5.5,6.9-9.2,8.7-7.3,3.2-11,4.1l26.1,40.3h-82.9Z' fill='white'/%3E%3Cpath d='M410.2,275.9' fill='white'/%3E%3Cg%3E%3Cpath d='M241.2,313.4l42.1-99.3,42.6,99.3' fill='white'/%3E%3Cpath d='M298.5,214.1h79.7l-40.3,99.3' fill='white'/%3E%3C/g%3E%3Cpolygon points='251 258 175.9 258 175.9 224.7 264.7 224.7 251 258' fill='white'/%3E%3Cpolygon points='232.7 303.8 175.9 303.8 175.9 270.5 246.4 270.5 232.7 303.8' fill='white'/%3E%3Cpolygon points='368.2 270.5 443.3 270.5 443.3 303.8 354.4 303.8 368.2 270.5' fill='white'/%3E%3Cpolygon points='386.5 224.7 443.3 224.7 443.3 258 372.7 258 386.5 224.7' fill='white'/%3E%3C/svg%3E");
    -webkit-mask-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 512 512' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M84.7,313.4h-.5v-99.3h47.6c10.1,0,18.3,2.7,24.3,8.2,6,5.5,9.2,13.3,9.2,22.9s-1.4,11.4-3.7,15.1-5.5,6.9-9.2,8.7-7.3,3.2-11,4.1l26.1,40.3h-82.9Z' fill='white'/%3E%3Cpath d='M410.2,275.9' fill='white'/%3E%3Cg%3E%3Cpath d='M241.2,313.4l42.1-99.3,42.6,99.3' fill='white'/%3E%3Cpath d='M298.5,214.1h79.7l-40.3,99.3' fill='white'/%3E%3C/g%3E%3Cpolygon points='251 258 175.9 258 175.9 224.7 264.7 224.7 251 258' fill='white'/%3E%3Cpolygon points='232.7 303.8 175.9 303.8 175.9 270.5 246.4 270.5 232.7 303.8' fill='white'/%3E%3Cpolygon points='368.2 270.5 443.3 270.5 443.3 303.8 354.4 303.8 368.2 270.5' fill='white'/%3E%3Cpolygon points='386.5 224.7 443.3 224.7 443.3 258 372.7 258 386.5 224.7' fill='white'/%3E%3C/svg%3E");
    mask-size: contain;
    -webkit-mask-size: contain;
    /* Initial position - will be overridden by animation */
    mask-position: 42% center;
    -webkit-mask-position: 42% center;
    mask-repeat: no-repeat;
    -webkit-mask-repeat: no-repeat;
    filter: drop-shadow(0 0 20px rgba(255, 255, 255, 0.5))
      drop-shadow(0 0 40px rgba(255, 100, 200, 0.3));
    /* Reduced drop-shadows for better performance */
    pointer-events: none;
    animation: zoomIn 1s linear forwards;
    transform: scale(50);
  }

  .gradient-layer {
    position: absolute;
    width: 150vw;
    height: 150vh;
    left: -25vw;
    top: -25vh;
    /* Static position - centered for visibility without animation */
    transform: translate3d(0, 0, 0);
    /* Reduced gradient layers for better performance */
    background: radial-gradient(circle at 30% 30%, #ff0000 0%, transparent 40%),
      radial-gradient(circle at 70% 30%, #ff00ff 0%, transparent 40%),
      radial-gradient(circle at 50% 50%, #00ffff 0%, transparent 40%),
      radial-gradient(circle at 30% 70%, #00ff00 0%, transparent 40%),
      radial-gradient(circle at 70% 70%, #ffff00 0%, transparent 40%),
      radial-gradient(
        ellipse at center,
        #ff0000 0%,
        #ffff00 25%,
        #00ffff 50%,
        #ff00ff 75%,
        #ff0000 100%
      );
    background-size: 60vw 60vh;
    background-repeat: repeat;
    cursor: grab;
    /* Performance optimizations */
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    /* Reduce repaints */
    contain: layout style paint;
  }

  .gradient-layer.dragging {
    cursor: grabbing;
  }

  .watermark {
    position: fixed;
    bottom: 20px;
    left: 20px;
    width: 40px;
    height: 40px;
    opacity: 0.6;
    z-index: 10;
    pointer-events: none;
  }

  .watermark svg {
    width: 100%;
    height: 100%;
  }

  /* Zoom in animation on page load - completely linear, smooth transition */
  @keyframes zoomIn {
    0% {
      transform: scale(50);
      /* Start focused on AV (3rd & 4th letters) */
      mask-position: 42% center;
      -webkit-mask-position: 42% center;
    }
    100% {
      transform: scale(1);
      /* Smoothly transition to center throughout entire animation */
      mask-position: center center;
      -webkit-mask-position: center center;
    }
  }

  /* Debug mode - uncomment to see mask boundaries */
  /* .logo-mask::before {
    content: '';
    position: absolute;
    inset: 0;
    border: 2px solid red;
    pointer-events: none;
    z-index: 1000;
  } */

  /* Subtle drift animation to show it's interactive */
  @keyframes drift {
    0% {
      transform: translate(0, 0);
    }
    25% {
      transform: translate(30px, -20px);
    }
    50% {
      transform: translate(-20px, 30px);
    }
    75% {
      transform: translate(20px, 20px);
    }
    100% {
      transform: translate(0, 0);
    }
  }

  /* Responsive adjustments for larger screens */
  @media screen and (min-width: 1024px) {
    .logo-mask {
      mask-size: 600px 600px;
      -webkit-mask-size: 600px 600px;
      /* Don't override mask-position - let animation handle it */
    }
  }

  @media screen and (min-width: 1440px) {
    .logo-mask {
      mask-size: 800px 800px;
      -webkit-mask-size: 800px 800px;
    }
  }

  @media screen and (min-width: 1920px) {
    .logo-mask {
      mask-size: 1000px 1000px;
      -webkit-mask-size: 1000px 1000px;
    }
  }

  @media screen and (min-width: 2560px) {
    .logo-mask {
      mask-size: 1200px 1200px;
      -webkit-mask-size: 1200px 1200px;
    }
  }
</style>

<script>
